<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/img_header_bg"
        android:layout_width="@dimen/nav_header_icon"
        android:layout_height="@dimen/nav_header_icon"
        android:layout_marginLeft="@dimen/spacing_larger"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:layout_toRightOf="@id/img_header_bg"
        android:layout_marginLeft="@dimen/spacing_smaller"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="TVFB"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="45dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
</LinearLayout>