<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_header_bg"
            android:layout_width="@dimen/nav_header_icon"
            android:layout_height="@dimen/nav_header_icon"
            android:layout_marginLeft="@dimen/spacing_larger"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_toRightOf="@id/img_header_bg"
            android:layout_marginLeft="@dimen/spacing_smaller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TVFB"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:textSize="48dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_fb"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textSize="18dp"
            android:textColor="@color/colorAccent"/>
    </LinearLayout>
</LinearLayout>